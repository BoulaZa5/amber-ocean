###################### Login
<Login>:
	login_name: login
	login_password: password
	
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # red
        Rectangle:
            pos: self.pos
            size: self.size
		

    BoxLayout:
		#display: entry
		canvas.before:
            Color:
                rgba: 0,0, 1, 0.1  # black
            Ellipse:
                pos: self.pos
                size: 400,250
				segments:8
				

        size: self.parent.size  
        pos: self.parent.pos  
        orientation: 'vertical'
		
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			Image:
				source: 'logo.png'
				size_hint: None, None
				size: 120, 120
		

        Label:
			font_size: 20
            text: 'UserName'
			text_size: self.size
			color: 0,0,0,1
			
		TextInput:
			size_hint: (1, None)
			height: 30
            id: login
			hint_text: 'Your Name'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
        Label:
			font_size: 20
            text: 'Password'
			hint_text: 'Your Password'
			text_size: self.size
			color: 0,0,0,1
			hint_text_color: 0,0,0,1
		TextInput:
			size_hint: (1, None)
			height: 30
            id: password
			hint_text: 'Your Password'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
			password: True
		Label:
			font_size: 1
			text: '  '
			size_hint: (.1, .1)
		Button:
			size_hint: (.5, .8)
			pos: self.pos
			font_size: 20
			text: 'Submit'
			background_color:0,0,1,0.7
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_press: root.submit_login() 
				 
					
		BoxLayout:
            orientation: 'horizontal'

			## Button:
				## on_release: app.root.current = 'ForgetPassword'
				## text: 'Forgetten Password'
				## font_size: 20 
				## background_color:0,0,1,0.7
				## size_hint: (.5, .6)
			Button:
				on_release: app.root.current = 'Registeration'
				text: 'Registeration'
				font_size: 20
				background_color:0,0,1,0.7
				size_hint: (.5, .6)
				
				
		
####################### Registeration Screen #######################
<Registeration>:
	name: name
	day: day
	month: month
	year: year
	email: email
	password: password
	phone: phone
	
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # red
        Rectangle:
            pos: self.pos
            size: self.size
		

    BoxLayout:
		## display: entry
		id: reg
		canvas.before:
            Color:
                rgba: 0,0, 1, 0.1  # black
            Ellipse:
                pos: self.pos
                size: 400,450
				segments:8
				

        size: self.parent.size  
        pos: self.parent.pos  
        orientation: 'vertical'
		
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			Image:
				source: 'logo.png'
				size_hint: None, None
				size: 120, 120
		#Name		
        Label:
			font_size: 20
            text: 'UserName'
			text_size: self.size
			color: 0,0,0,1
		TextInput:
			size_hint: (1, None)
			height: 30
            id: name
			hint_text: 'Your Name'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
			
		#gender
		Label:
			font_size: 20
            text: 'Gender'
			text_size: self.size
			color: 0,0,0,1
		BoxLayout:
			orientation:'horizontal'
			ToggleButton:
				text:'Male'
				group:'sex'
				on_release: root.ismale()
			ToggleButton:
				text:'Female'
				group:'sex'
				state:'down'
				on_release: root.isfemale()
		#birthday
		Label:
			font_size: 20
            text: 'Birthday'
			text_size: self.size
			color: 0,0,0,1
		BoxLayout:
			orientation: "horizontal"
			TextInput:
				size_hint: (1, None)
				height: 30
				id: day
				hint_text: 'Day'
				hint_text_color: 0,0, 1, 0.3
				font_size: 15
				multiline: False
				font_name:'Arial'
			TextInput:
				size_hint: (1, None)
				height: 30
				id: month
				hint_text: 'Month'
				hint_text_color: 0,0, 1, 0.3
				font_size: 15
				multiline: False
				font_name:'Arial'
			TextInput:
				size_hint: (1, None)
				height: 30
				id: year
				hint_text: 'Year'
				hint_text_color: 0,0, 1, 0.3
				font_size: 15
				multiline: False
				font_name:'Arial'			
		#Email
		Label:
			font_size: 20
            text: 'Email'
			text_size: self.size
			color: 0,0,0,1
			
		TextInput:
			size_hint: (1, None)
			height: 30
            id: email
			hint_text: 'Your Email'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
        
		#password
		Label:
			font_size: 20
            text: 'Password'
			text_size: self.size
			color: 0,0,0,1
			
		TextInput:
			size_hint: (1, None)
			height: 30
            id: password
			hint_text: 'Password'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'

		#phone
		Label:
			font_size: 20
            text: 'Phone'
			text_size: self.size
			color: 0,0,0,1
			
		TextInput:
			size_hint: (1, None)
			height: 30
            id: phone
			hint_text: 'Phone'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
			
		Label:
			font_size: 1
			text: '  '
			size_hint: (.1, .1)
		Button:
			size_hint: (.5, .8)
			pos: self.pos
			font_size: 20
			text: 'Submit'
			background_color:0,0,1,0.7
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_release: root.registerAccount()
		BoxLayout:
			Button:
				on_release: app.root.current = 'login'
				text: 'Back to Login'
				font_size: 20 
				background_color:0,0,1,0.7
				size_hint: (.5, .7)
		BoxLayout:
			id: error
			
