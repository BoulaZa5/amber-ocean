###################### Home
<HomePage>:
	BoxLayout:				
		BoxLayout:
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1  # white
				Rectangle:
					pos: self.pos
					size: self.size
			orientation: "horizontal"		
			spacing: 5
			########### Groups ############
			BoxLayout:
				orientation: "vertical"
				height:500
				size_hint_x: None
				size:self.size
				BoxLayout:
					size_hint_y: 0.3
					orientation: "vertical"
					id: groups_l
				BoxLayout:
					orientation: "vertical"
					id: groups
				Widget:	
			########### Friends ############	
			BoxLayout:
				orientation: "vertical"
				height:500
				size_hint_x: None
				size:self.size
				BoxLayout:
					size_hint_y: 0.3
					orientation: "vertical"
					id: friends_l
				BoxLayout:
					orientation: "vertical"
					id: friends
				Widget:	
			########### Followees ############	
			BoxLayout:
				orientation: "vertical"
				width: 100
				size_hint_x: None
				size:self.size
				BoxLayout:
					id: followees
					orientation: "vertical"
				
				
			########### Ships ############	
			BoxLayout:
				orientation: "vertical"
				width:300
				size_hint_x: None
				size:self.size
				BoxLayout:
					id: ships
					orientation: "vertical"
					

			########### Suggessted Friends ############	
			
			BoxLayout:
				orientation: "vertical"
				width: 150
				size_hint_x: None
				size:self.size
				ScrollView:	
					do_scroll_y: True
					BoxLayout:
						height:600
						orientation: "vertical"
						id: sugg_friend
					
			

			########### Suggested Groups ############
			BoxLayout:
				orientation: "vertical"
				width: 150
				size_hint_x: None
				size:self.size
				ScrollView:	
					do_scroll_y: True
					BoxLayout:
						height:600
						orientation: "vertical"
						id: sugg_group
					
				

		