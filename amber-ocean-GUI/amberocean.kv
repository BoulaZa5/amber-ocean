			hint_text: 'Phone'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
			
		Label:
			font_size: 1
			text: '  '
			size_hint: (.1, .1)
		Button:
			size_hint: (.5, .8)
			pos: self.pos
			font_size: 20
			text: 'Submit'
			background_color:0,0,1,0.7
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_release: root.registerAccount()
