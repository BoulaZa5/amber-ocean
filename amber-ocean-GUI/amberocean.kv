####################### Registeration Screen #######################
<Registeration>:
	name: name
	day: day
	month: month
	year: year
	email: email
	password: password
	phone: phone
	
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # red
        Rectangle:
            pos: self.pos
            size: self.size
		

    BoxLayout:
		## display: entry
		canvas.before:
            Color:
