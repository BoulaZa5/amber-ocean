#:kivy 1.9.1

#Login
<AmberOceanLogin>:
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # red
        Rectangle:
            pos: self.pos
            size: self.size
		

    BoxLayout:
		
		display: entry
		
	
		canvas.before:
            Color:
                rgba: 0,0, 1, 0.1  # black
            Ellipse:
                pos: self.pos
                size: 400,250
				segments:8
				

        size: self.parent.size  
        pos: self.parent.pos  
        orientation: 'vertical'
		
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			Image:
				source: 'logo.png'
				size_hint: None, None
				size: 200, 200

        Label:
			font_size: 20
            text: 'UserName'
			text_size: self.size
			color: 0,0,0,1
			
		TextInput:
			size_hint: (1, None)
			height: 30
            id: entry
			hint_text: 'Your Name'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
        Label:
			font_size: 20
            text: 'Password'
			hint_text: 'Your Password'
			text_size: self.size
			color: 0,0,0,1
			hint_text_color: 0,0,0,1
		TextInput:
			size_hint: (1, None)
			height: 30
            id: entry
			hint_text: 'Your Password'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			
			font_name:'Arial'
		Button:
			size_hint: (.5, .5)
			pos: self.pos
			font_size: 20
			text: 'Submit'
			background_color:0,0,1,0.7
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            

# BackGround
<AmberOceanUI>:
    AnchorLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # white
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        AmberOceanLogin:
            size: 400,250

