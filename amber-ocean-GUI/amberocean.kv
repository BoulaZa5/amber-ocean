				hint_text: 'Year'
				hint_text_color: 0,0, 1, 0.3
				font_size: 15
				multiline: False
				font_name:'Arial'			
		#Email
		Label:
			font_size: 20
            text: 'Email'
			text_size: self.size
			color: 0,0,0,1
			
		TextInput:
			size_hint: (1, None)
			height: 30
            id: email
			hint_text: 'Your Email'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
        
		#password
