            Ellipse:
                pos: self.pos
                size: 400,450
				segments:8
				

        size: self.parent.size  
        pos: self.parent.pos  
        orientation: 'vertical'
		
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'center'
			Image:
				source: 'logo.png'
				size_hint: None, None
				size: 120, 120
		#Name		
        Label:
			font_size: 20
            text: 'UserName'
			text_size: self.size
			color: 0,0,0,1
		TextInput:
			size_hint: (1, None)
			height: 30
            id: name
			hint_text: 'Your Name'
			hint_text_color: 0,0, 1, 0.3
            font_size: 15
            multiline: False
			font_name:'Arial'
			
		#gender
		Label:
			font_size: 20
            text: 'Gender'
			text_size: self.size
			color: 0,0,0,1
		BoxLayout:
			orientation:'horizontal'
			ToggleButton:
				text:'Male'
				group:'sex'
				on_release: root.ismale()
			ToggleButton:
				text:'Female'
				group:'sex'
				state:'down'
				on_release: root.isfemale()
		#birthday
		Label:
			font_size: 20
            text: 'Birthday'
			text_size: self.size
			color: 0,0,0,1
